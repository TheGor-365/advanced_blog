<div class="border border-secondary rounded p-3 m-2 comment-<%= comment.id %>">
  <small>
    <%= comment.user.email %><br>
  </small>
  <small class="text-muted">
    Posted <%= time_ago_in_words(comment.created_at) %>
  </small>

  <% if current_user == comment.user %>
    <div class="button-group float-end">
      <%= button_to "Delete", [ post, comment ], method: :delete, class: "btn btn-sm btn-outline-danger" %>
    </div>
  <% end %>
  <hr>
  <%= comment.body %>
</div>
