<h1 class="text-center display-6 mb-5">
  Set your name
</h1>

<%= form_for @user, method: :put, url: wizard_path do |f| %>

  <% if f.object.errors.any? %>
    <div class="error-messages">
      <%= f.object.errors.full_messages.each do |error| %>
        <p class="text-danger">
          <%= error %>
        </p>
      <% end %>
    </div>
  <% end %>

  <div class="form-control p-5">
    <legend>Your name</legend>
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name...', required: true %>
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name...', required: true %>
  </div>

  <div class="d-flex flex-row-reverse">
    <%= render 'links' %>
    <%= f.submit 'Next step', class: 'btn btn-sm btn-success mt-3 px-5' %>
  </div>
<% end %>

<%= render 'after_signup/links' %>

<style media="screen">
  div.field_with_errors {
    display: inline;
  }
</style>
