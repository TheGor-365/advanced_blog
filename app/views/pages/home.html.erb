<h1 class="text-center mb-5 display-1">
  <strong class="text-success">
    Wellcome
  </strong>
</h1>

<div class="card p-5 text-center">
  <p class="text-muted">
    You can read more about me, or checkout my blog.
  </p>

  <div class="card-actions mb-3">
    <%= link_to "About me", about_path, class: 'btn btn-sm btn-secondary' %>
    <%= link_to "Blog", posts_path, class: 'btn btn-sm btn-success' %>
  </div>
</div>

<% if current_user %>
  <div class="card mt-4 p-5">
    <h2 class="text-muted text-center mb-4">
      User Info
    </h2>

    <div class="row">
      <div class="col-3">
        <h3 class="mt-5 text-success">
          <%= current_user.full_name %>
        </h3>
      </div>

      <div class="col-5">
        <ul class="text-muted">
          <li><%= current_user.address.street.titleize %></li>
          <li><%= current_user.address.city.titleize %></li>
          <li><%= current_user.address.state.titleize %></li>
          <li><%= current_user.address.zip %></li>
          <li><%= current_user.address.country.titleize %></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
