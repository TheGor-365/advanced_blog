<h1 class="text-center my-5 display-6 text-success">
  <%= pluralize(@posts.count, 'result') %>
</h1>

<table class="table table-striped table-bordered my-5 shadow">
  <thead class="bg-light">
    <tr>
      <th class="p-3"><%= sort_link(@query, :title,          'Title', default_order: :asc) %></th>
      <th class="p-3"><%= sort_link(@query, :category_name,  'Category', default_order: :asc) %></th>
      <th class="p-3"><%= sort_link(@query, :body,           'Blog Content') %></th>
      <th class="p-3"><%= sort_link(@query, :user_full_name, 'Users') %></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="p-3"><%= link_to post.title, post %></td>
        <td class="p-3"><%= link_to post.category.name, post.category %></td>
        <td class="p-3"><%= post.body.to_plain_text.truncate_words(25) %></td>
        <td class="p-3"><%= link_to post.user.full_name, post.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
