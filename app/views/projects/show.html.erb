<p style="color: green"><%= notice %></p>

<%= render @project %>
<div class="mt-3">
  <%= link_to "Back to projects", projects_path, class: 'text-secondary float-end' %><br>
</div>

<% if current_user.admin? %>
  <div class="btn-group my-5 float-end">
    <%= link_to "Edit this project", edit_project_path(@project), class: 'btn btn-sm btn-warning' %>
    <%= button_to "Destroy this project", @project, method: :delete, class: 'btn btn-sm btn-danger' %>
  </div>
<% end %>
