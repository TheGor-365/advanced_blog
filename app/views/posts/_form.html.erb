<div class="border p-5 rounded bg-light">
  <%= form_with(model: post) do |form| %>

    <% if post.errors.any? %>
      <div class="border p-5 my-5 rounded border-danger">
        <p class="text-muted"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved</p>
        <% post.errors.each do |error| %>
          <small class="text-danger"><%= error.full_message %></small>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= form.label :body, class: "form-label" %>
      <%= form.rich_text_area :body, class: "form-control" %>
    </div>

    <div class="my-3 col-6">
      <%= form.label :category, class: "form-label" %>
      <%= form.select :category_id, options_for_select(Category.all.order(name: :asc).collect { |cat| [ cat.name, cat.id ] }), {}, {class: "form-control"} %>
    </div>

    <div class="mt-3">
      <%= form.submit class: "btn btn-sm btn-success" %>
    </div>
  <% end %>
</div>
