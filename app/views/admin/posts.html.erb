<h1 class="display-1 text-success text-center mb-5">
  Administrator
</h1>

<%= render 'admin/nav_links' %>

<table class="table table-striped table-bordered my-5 shadow">
  <thead class="bg-light">
    <tr>
      <th scope="col" class="p-3">ID</th>
      <th scope="col" class="p-3">Posts</th>
      <th scope="col" class="p-3">Author</th>
      <th scope="col" class="p-3">Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th><%= post.id %></th>
        <td><%= link_to post.title.truncate(15), admin_post_path(post) %></td>
        <td><%= post.user.name %></td>
        <td><%= pluralize(post.comments.size, 'comment') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
