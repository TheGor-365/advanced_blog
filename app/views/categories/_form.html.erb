<div class="col-6 border rounded p-5 bg-light">
  <%= form_with(model: category) do |form| %>

    <% if category.errors.any? %>
      <p><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved</p>
      <% category.errors.each do |error| %>
        <p><%= error.full_message %></p>
      <% end %>
    <% end %>

    <div>
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="my-3">
      <%= form.label :display_in_nav, class: 'form-check-label me-2' %>
      <%= form.check_box :display_in_nav, class: 'form-check-input' %>
    </div>

    <div class="mt-2">
      <%= form.submit class: 'btn btn-sm btn-success' %>
    </div>
  <% end %>
</div>
